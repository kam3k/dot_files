[user]
    name = Marc Gallant
    email = marc.gallant@quanergy.com
[core]
    editor = /usr/bin/vim
    excludesfile = ~/.gitignore_global
[alias]
    co = checkout
    cm = commit
    st = status
    br = branch
    hist = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen%cn%Creset %Cblue(%cr)%Creset' --abbrev-commit --date=relative
    type = cat-file -t
    dump = cat-file -p
    undo-commit = reset --soft HEAD^
    d = difftool
    dd = difftool --dir-diff
    m = mergetool
    changes = diff HEAD@{1} HEAD
    diff = diff -w
[status]
    showUntrackedFiles = all
[github]
    user = kam3k
[push]
    default = simple
[diff]
    tool = meld
[difftool]
    prompt = false
[merge]
    tool = meld
    conflictstyle = diff3
[mergetool]
    prompt = false
[color "status"]
	added = "green bold"
	changed = "red italic"
