# set mod key
set $mod Mod1

# set terminal
set $term rxvt-unicode

# font
font pango:Iosevka Term 15

# colorscheme with wal
exec --no-startup-id wal -i ~/.config/wallpapers/rocks.jpg -o wal-set

# hide title bars
new_window 1pixel

# start a terminal
bindsym $mod+Return exec $term

# kill focused window
bindsym $mod+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+z split v

# split in vertical orientation
bindsym $mod+v split h

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# show the scratchpad window
bindsym $mod+minus scratchpad show

# set default container layout (default, stacking, or tabbed)
workspace_layout default

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacked
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+f floating toggle

set $workspace1 "1:  Firefox "
set $workspace2 "2:  Spotify "
set $workspace3 "3:  Terminal "
set $workspace4 "4:  Vim "
set $workspace5 "5:  Miscellaneous "

# switch to workspace
bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5
bindsym $mod+6 workspace 6
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10
bindsym $mod+p workspace back_and_forth
bindsym $mod+y workspace prev
bindsym $mod+o workspace next

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $workspace1
bindsym $mod+Shift+2 move container to workspace $workspace2
bindsym $mod+Shift+3 move container to workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4
bindsym $mod+Shift+5 move container to workspace $workspace5
bindsym $mod+Shift+6 move container to workspace 6
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# start browser
for_window [class="Firefox"] move container to workspace $workspace1
exec --no-startup-id firefox

# start spotify
for_window [class="Spotify"] move container to workspace $workspace2
exec --no-startup-id spotify --force-device-scale-factor=1.5

# start main terminal
for_window [instance="term_main"] move container to workspace $workspace3
exec --no-startup-id $term -name term_main

# start vim terminal
for_window [instance="term_vim"] move container to workspace $workspace4
exec --no-startup-id $term -name term_vim

# start scratchpad
for_window [instance="term_scratch"] move scratchpad
exec --no-startup-id $term -name term_scratch

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exit

# move workspace to other monitor
bindsym $mod+m move workspace to output right

# get colors from wal
set_from_resource $color1 i3wm.color1 #f0f0f0
set_from_resource $color2 i3wm.color2 #f0f0f0
set_from_resource $color3 i3wm.color3 #f0f0f0
set_from_resource $color4 i3wm.color4 #f0f0f0
set_from_resource $color5 i3wm.color5 #f0f0f0
set_from_resource $color6 i3wm.color6 #f0f0f0
set_from_resource $color7 i3wm.color7 #f0f0f0

# hide borders
for_window [class="^.*"] border pixel 4
client.focused $color1 $color1 $color1 $color1 $color1

# start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    position top
    status_command i3blocks -c ~/.config/i3/i3blocks.conf
    strip_workspace_numbers yes
    colors {
        background $color1
        separator $color1
        #                   border      background     text
        focused_workspace   $color4     $color4        #ffffff
        inactive_workspace  $color1     $color1        #ffffff
		active_workspace    $color1     $color1        #ffffff
        urgent_workspace    $color1     $color1        #ffffff
    }
}

# lock screen
bindsym $mod+Shift+x exec i3lock

# pulse audio controls
bindsym XF86AudioRaiseVolume exec pactl -- set-sink-volume @DEFAULT_SINK@ +8%; exec pactl -- set-sink-mute @DEFAULT_SINK@ 0
bindsym XF86AudioLowerVolume exec pactl -- set-sink-volume @DEFAULT_SINK@ -8%; exec pactl -- set-sink-mute @DEFAULT_SINK@ 0
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

# screen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# spotify player controls
bindsym XF86AudioPlay exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
bindsym XF86AudioStop exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Stop"
bindsym XF86AudioPrev exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
bindsym XF86AudioNext exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"

# dmenu
bindsym $mod+space exec dmenu_run -nb "$color1" -nf "$color7" -sb "$color7" -sf "$color1" -fn "Iosevka Term-17"

# use dunst for notifications
exec killall -q notify-osd
exec --no-startup-id dunst

# put monitor to left of laptop
exec --no-startup-id xrandr --output DP-3 --auto --right-of DP-2

# for shadows
exec --no-startup-id compton -c --no-fading-openclose

# redshift
exec --no-startup-id redshift-gtk

# gaps
gaps inner 30
gaps outer 30
