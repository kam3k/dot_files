# set mod key
set $mod Mod1

# set terminal
set $term urxvt

# load xresources
exec_always --no-startup-id xrdb -load ~/.Xresources 

# font
font pango:Iosevka Term 8

# hide title bars
new_window 1pixel

# start a terminal
bindsym $mod+Return exec $term

# kill focused window
bindsym $mod+q kill

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# split in horizontal orientation
bindsym $mod+z split v

# split in vertical orientation
bindsym $mod+v split h

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen

# show the scratchpad window
bindsym $mod+minus [instance="term_scratch"] scratchpad show

# set default container layout (default, stacking, or tabbed)
workspace_layout default

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacked
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+f floating toggle
floating_modifier $mod

set $workspace1 "1 "
set $workspace2 "2 "
set $workspace3 "3 "
set $workspace4 "4 "
set $workspace5 "5 "
set $workspace6 "6 "
set $workspace7 "7 "
set $workspace8 "8 "
set $workspace9 "9 "
set $workspace10 "10 "

# switch to workspace
bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5
bindsym $mod+6 workspace $workspace6
bindsym $mod+7 workspace $workspace7
bindsym $mod+8 workspace $workspace8
bindsym $mod+9 workspace $workspace9
bindsym $mod+0 workspace $workspace10
bindsym $mod+p workspace back_and_forth

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $workspace1
bindsym $mod+Shift+2 move container to workspace $workspace2
bindsym $mod+Shift+3 move container to workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4
bindsym $mod+Shift+5 move container to workspace $workspace5
bindsym $mod+Shift+6 move container to workspace $workspace6
bindsym $mod+Shift+7 move container to workspace $workspace7
bindsym $mod+Shift+8 move container to workspace $workspace8
bindsym $mod+Shift+9 move container to workspace $workspace9
bindsym $mod+Shift+0 move container to workspace $workspace10

# start browser
for_window [class="Firefox"] move container to workspace $workspace1
exec --no-startup-id firefox

# start spotify
for_window [class="Spotify"] move container to workspace $workspace2
exec --no-startup-id spotify --force-device-scale-factor=1.5

# start slack
for_window [class="Slack"] move container to workspace $workspace3
exec --no-startup-id slack

# start nm-applet in background
exec --no-startup-id nm-applet &

# start udiskie in background
exec --no-startup-id udiskie -Nt2 &

# start volumeicon in background
exec --no-startup-id volumeicon &

# start main terminal
for_window [instance="term_main"] move container to workspace $workspace4
exec --no-startup-id $term -name term_main

# start host terminal
for_window [instance="term_host"] move container to workspace $workspace5
exec --no-startup-id $term -name term_host

# start scratchpad
for_window [instance="term_scratch"] move scratchpad
exec --no-startup-id $term -name term_scratch
bindsym $mod+n exec $term -name term_scratch

# applications that should always float
for_window [class="SimpleScreenRecorder"] floating enable
for_window [class="zoom"] floating enable

# applications pinned to a workspace
for_window [class="Nemiver"] move container to workspace $workspace6
for_window [class="Meld"] move container to workspace $workspace7
for_window [class="zoom"] move container to workspace $workspace8

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exit

# move workspace to other monitor
bindsym $mod+m move workspace to output right

# set colors
set $black #373B41
set $red #CC6666
set $green #B5BD68
set $yellow #F0C674
set $blue #81A2BE
set $magenta #B294BB
set $cyan #8ABEB7
set $white #C5C8C6
set $bg-color #1D1F21
set $inactive-bg-color #282A36
set $text-color #282A2E
set $inactive-text-color #707880

# borders
hide_edge_borders smart # no borders when only one window
# class                 border      backgr.     text         indicator child_border
client.focused          $magenta    $magenta    $bg-color    $green    $magenta
client.focused_inactive $magenta    $magenta    $bg-color    $green    $bg-color
client.unfocused        $magenta    $magenta    $bg-color    $green    $bg-color
client.urgent           $red        $red        $bg-color    $green    $red

# bar configuration 
bar {
    position top
    status_command i3blocks -c ~/.config/i3/i3blocks.conf

    colors {
        background $bg-color
        separator $bg-color
        #                   border              background         text
        focused_workspace   $magenta            $magenta           $text-color
        inactive_workspace  $bg-color           $bg-color          $inactive-text-color
        active_workspace    $bg-color           $bg-color          $inactive-text-color
        urgent_workspace    $red                $red               $text-color
    }
}

# resize windows
mode "resize" {
    bindsym h resize shrink width 5 px or 5 ppt
    bindsym j resize grow height 5 px or 5 ppt
    bindsym k resize shrink height 5 px or 5 ppt
    bindsym l resize grow width 5 px or 5 ppt

    # press enter or escape to go back to normal
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# lock screen
bindsym $mod+Shift+x exec i3lock

# pulse audio controls
bindsym XF86AudioRaiseVolume exec pactl -- set-sink-volume @DEFAULT_SINK@ +8%; exec pactl -- set-sink-mute @DEFAULT_SINK@ 0
bindsym XF86AudioLowerVolume exec pactl -- set-sink-volume @DEFAULT_SINK@ -8%; exec pactl -- set-sink-mute @DEFAULT_SINK@ 0
bindsym XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle

# spotify player controls
bindsym XF86AudioPlay exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
bindsym XF86AudioStop exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Stop"
bindsym XF86AudioPrev exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
bindsym XF86AudioNext exec "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"

# dmenu
bindsym $mod+space exec i3-dmenu-desktop --dmenu='dmenu -b -i -nb "$bg-color" -nf "$inactive-text-color" -sb "$green" -sf "$text-color" -fn "Iosevka Term:size=8"'

# use dunst for notifications
exec_always killall -q notify-osd
exec_always --no-startup-id dunst

# set wallpaper
exec --no-startup-id feh --bg-scale ~/.config/wallpapers/city.jpg
